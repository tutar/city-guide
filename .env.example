# City Guide Smart Assistant Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="City Guide Smart Assistant"
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://cityguide_user:cityguide_password@localhost:5432/cityguide
TEST_DATABASE_URL=postgresql://cityguide_user:cityguide_password@localhost:5432/cityguide_test

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379/0

# Vector Database (Milvus)
MILVUS_URL=http://localhost:19530
MILVUS_TOKEN=
MILVUS_COLLECTION_NAME=document_embeddings

# AI Service Configuration
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
USE_MOCK_AI_SERVICE=false

# Embedding Model Configuration
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_DIMENSION=1024
EMBEDDING_DEVICE=cpu

# Search Configuration
SEARCH_RESULTS_LIMIT=10
SEARCH_SIMILARITY_THRESHOLD=0.7
HYBRID_SEARCH_WEIGHT_VECTOR=0.7
HYBRID_SEARCH_WEIGHT_KEYWORD=0.3

# Chainlit Configuration
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8001
CHAINLIT_HEADLESS=false
CHAINLIT_WATCH=false

# External API Configuration
GOVERNMENT_API_BASE_URL=https://api.shenzhen.gov.cn
GOVERNMENT_API_KEY=your-government-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Caching Configuration
CACHE_TTL_SECONDS=300
SESSION_TIMEOUT_MINUTES=30

# Monitoring and Analytics
ENABLE_ANALYTICS=true
SENTRY_DSN=

# Development Settings
PYTHONPATH=src

# Optional: External Services
GOOGLE_MAPS_API_KEY=
BAIDU_MAPS_API_KEY=

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
